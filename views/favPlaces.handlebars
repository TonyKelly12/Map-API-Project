<head>

    <title>Favorite Places</title>
    {{>favfunctions}}
</head>

<h1 class="page-header">Dashboard</h1>

<p id="subtitle">Welcome to your dashboard</p>

<div class="container-fluid">
    <div class="row">

        <div class="options-box col-md-4">
            <h1>Your Saved Locations</h1>
            <hr>
            <table>
                <thead>
                    <tr>
                        <th>Location Name</th>
                        <th>Address</th>
                        <th>Phone</th>
                        <th></th>
                    </tr>
                </thead>
                <!-- Todo: Generate table body -->
                <tbody id="table" data-bind="foreach: favlocations">
                    <tr>
                        <td data-bind="text:title "> </td>
                        <td id="addressdiv" data-bind="text:address "></td>
                        <td id="phonediv" data-bind="text:phone "></td>
                    </tr>
                </tbody>
            </table>


        </div>
        {{#if errors}} {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
        {{/each}} {{/if}}

        <div class="col-md-6">
            <div class="center">

                <div><img id="fav-photo" data-bind="attr: {src:photo}" alt="messages" /></div>
                <input type="button" id="load-list" value="Load list">
            </div>
        </div>
    </div>

</div>

</div>